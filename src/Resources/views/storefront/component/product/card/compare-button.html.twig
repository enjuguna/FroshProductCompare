{% block kware_product_compare_add_to_compare_box %}
    {% set showIconOnly = config('KwareProductCompare.config.showIconOnly') %}
    {# @var product \Shopware\Core\Content\Product\SalesChannel\SalesChannelProductEntity #}
    <div class="order-button">
        {% block kware_product_compare_add_to_compare_button %}
            {% if showIconOnly %}
                <button 
                        onclick="window.location.href='https://api.whatsapp.com/send?phone=254798184724&text=Hello%2C%20I%20wanted%20more%20information%20on%20this%20{{product.name}}%20{{product.productNumber}}%20%20going%20for%20%20KES.%20{{product.calculatedPrice.unitPrice}}%20.';"
                        class="btn btn-block btn-compare"
                        href="{{ seoUrl('frontend.detail.page', {'productId': product.id}) }}#review-tab-pane"
                        title="{{ "kwareProductCompare.general.orderViaWhatsapp"|trans|striptags }}">
                    {% sw_icon 'bag-product' style { 'size': 'sm', 'color': 'primary' } %}
                </button>
            {% else %}
                <button 
                        onclick="window.location.href='https://api.whatsapp.com/send?phone=254798184724&text=Hello%2C%20I%20wanted%20more%20information%20on%20this%20{{product.name}}%20{{product.productNumber}}%20%20going%20for%20%20KES.%20{{product.calculatedPrice.unitPrice}}%20.';"
                        href="{{ seoUrl('frontend.detail.page', {'productId': product.id}) }}#review-tab-pane"
                        class="btn btn-block btn-compare"
                        title="{{ "kwareProductCompare.general.orderViaWhatsapp"|trans|striptags }}">
                       {% sw_icon 'address' style { 'size': 'sm', 'color': 'primary' } %}
                        {{ "kwareProductCompare.general.orderViaWhatsapp"|trans|sw_sanitize }}
                    
                </button>
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}
